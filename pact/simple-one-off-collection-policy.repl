      (hashes:list (map (at 'hash ) manifests))
      (tokens:list (map (token-id) hashes))
      (tokens-hash:string (hash tokens)))
      (init-collection "collection-0" 5 tokens-hash "operator" (read-keyset 'operator) coin 5.0)
      )
